---
import Text from "../system/Text.astro";
import CampusCard from "./campusCard.astro";
import jakkur from "../../image/campus/jakkur.jpg";
import whitefield from "../../image/campus/whitefield.jpg";

---


<div class='bg-white p-14 max-md:p-5 flex flex-col gap-8'>
    <div class="flex flex-col gap-3 items-center justify-center">
      <Text type="subtitle">DIVERSE ENVIRONMENTS</Text>
      <Text type="h2">Explore our <span class="text-[#3B8AE0]">Campuses</span></Text>
    </div>
  <div class="flex flex-col gap-5">
    <CampusCard
      image={[
        {type: 'picture', slide: [
        { src: whitefield, media: "(min-width: 768px)", position: 'center 64%' },
        { src: whitefield, media: "(max-width: 768px)" },
      ], position: 'center 10%'},
      ]}
      name={"Whitefield"}
      desc={"Survey No. 13/1, Bhaktharahalli, Nadavati Post, Hoskote Taluk, Bengaluru – 560067"}
      index={0}
      ctaText={'Apply Now'}
      ctaLink={'/?campus=whitefield'}
      path={`hhh`}
    >
    </CampusCard>
    <CampusCard
      image={[
        {type: 'picture', slide: [
        { src: jakkur, media: "(min-width: 768px)", position: 'center 64%' },
        { src: jakkur, media: "(max-width: 768px)" },
      ], position: 'center 10%'},
      ]}
      name={"Jakkur"}
      desc={"Survey No. 37/1, Nehru Nagar Shivannahalli, off Jakkur-Yalahanka Road, Bengaluru – 560064"}
      index={1}
      class="items-end"
      ctaText={'Apply Now'}
      ctaLink={'/?campus=jakkur'}
      path={`hhh`}
    >
    </CampusCard>
  </div>
  </div>